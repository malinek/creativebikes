<h2> Please sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class= "row">
    <div class="col-sm-12 user-form">
      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, class: "form-field sign-up-form" %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "off", class: "form-field sign-up-form" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-field sign-up-form"%>
      </div>
      <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-default user-form-button" %>
      </div>
    </div><!-- end col-sm-12 user-form -->
  </div><!-- end row -->
<% end %>

<%= render "devise/shared/links" %>
