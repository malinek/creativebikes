<h2>Forgot your password?</h2>

<div class= "row">
   <div class="col-sm-12 user-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
  <%= f.email_field :email, autofocus: true, class: "form-field sign-up-form", placeholder: "Enter email address" %>
  </div>

  <div class="actions">
  <%= f.submit "Send me reset password instructions", class: "btn btn-default user-form-button-2" %>
  </div>
  <% end %>
  </div><!-- end col-sm-12 user-form -->
</div><!-- end row -->

<%= render "devise/shared/links" %>
