<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class= "row">
    <div class="col-sm-12 user-form">
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "email adress", class: "form-field sign-up-form" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "form-field sign-up-form" %>
      </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-default user-form-button" %>
      </div>
    </div><!-- end col-sm-12 user-form-->
  </div><!-- end row --> 
<% end %>

<%= render "devise/shared/links" %>
